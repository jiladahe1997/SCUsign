/* pages/course_signhistory/course_signhistory.wxss */

page{
    height: 99%;          /*外边距合并的1prx，减去*/

}

text{
    box-sizing: border-box
}

.container{
    height: 100%;
    padding: 1rpx
}

.table{
    height: 80%;
    width: 80%;
    margin: 10% auto;

}

.title-1{
    display: inline-block;
    width: 70%;
    text-align: center
}
.title-2{
    display: inline-block;
    width: 30%;
    text-align: center
}

.table-main{

    height: 90%;
    border: 2px solid black;
    overflow: hidden;
}
.cell-1{
    display: inline-block;
    width: 70%;
    height: 54rpx;
    line-height: 54rpx;
    border-bottom: 1px solid black;
    border-right: 1px solid black;
    font-size: 15px;
    vertical-align: bottom;
    text-align: center
}
.cell-2{
    display: inline-block;
    width: 30%;
    height: 54rpx;
    line-height: 54rpx;
    font-size: 10px;
    border-bottom: 1px solid black;
    vertical-align: bottom;
}