/* pages/course_signhistory/course_signhistory.wxss */

page{
    height: 99%;          /*外边距合并的1prx，减去*/

}

text{
    box-sizing: border-box
}
view{
    box-sizing: border-box
}

.container{
    height: 100%;
    padding: 1rpx
}

.table{
    height: 80%;
    width: 80%;
    margin: 10% auto;

}

.title-1{
    display: inline-block;
    width: 70%;
    text-align: center
}
.title-2{
    display: inline-block;
    width: 30%;
    text-align: center
}


.table-main{

    height: 90%;
    border: 2px solid black;
    overflow: hidden;
}
.cell-1{
    display: inline-block;
    width: 70%;
    height: 54rpx;
    line-height: 54rpx;
    border-bottom: 1px solid black;
    border-right: 1px solid black;
    font-size: 15px;
    vertical-align: bottom;
    text-align: center
}
.cell-2{
    display: inline-block;
    width: 30%;
    height: 54rpx;
    line-height: 54rpx;
    font-size: 10px;
    border-bottom: 1px solid black;
    vertical-align: bottom;
}










/* tea */
.table-tea{
    height: 99%;
    width: 99%;
    border: 2px solid black;
}

.horizontal{
    display: inline-block;
    width: 25%;
    height: 100rpx;
    /*line-height: 100rpx;     */                           /*bug line-height继承重写无效*/
    border-right: 1px solid black;
    border-bottom: 1px solid black;
    vertical-align: top
}
.hor-time{
    /*line-height: 20rpx;         *.                   /*bug line-height继承重写无效*/
    font-size: 15px;
}
.blank{
    display: inline-block;
    width: 20%;
    height: 100rpx;
    line-height: 100rpx;
    border-right: 1px solid black;
    border-bottom: 1px solid black;
    font-size: 15px;
    vertical-align: top;
}




.vertical{
    display: inline-block;
    width: 20%;
    border-right: 1px solid black;
    border-bottom: 1px solid black
}
.ver-name{
    display: inline-block;
    width: 100%;
    border-bottom: 1px solid black
}


.main{
    display: inline-block;
    width: 80%;
    vertical-align: top;
    
}
.main-cell{
    width: 31.25%;
    text-align: center;
    border-right: 1px solid black;
    border-bottom: 1px solid black
}
.main-cell-icon{
    display: inline;
}